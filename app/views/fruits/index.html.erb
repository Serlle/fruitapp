<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center pb-8">
    <h1 class="mx-auto text-lg font-bold text-4xl">Fruits</h1>
  </div>
  
  <table id="products" class="mx-auto">
    <tfoot>
      <tr>
        <td colspan="3">
          <div class="mt-8">
            <%= link_to "New fruit", new_fruit_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
          </div>
        </td>
      </tr>
    </tfoot>
  
    <tbody>
      <% @fruits.each do |fruit| %>
        <tr class="py-4 <%= cycle('bg-green-50', 'bg-white') %>">
          <td class="px-2 py-3">
            <%= image_tag(fruit.image_url, class: 'w-40') %>
          </td>

          <td>
            <h1 class="text-xl font-bold mb-3"><%= fruit.name %></h1>
            <p>
              Color: <%= fruit.color %>
            </p>

            <p>
              Flavor: <%= fruit.flavor %>
            </p>

            <p>
              Weight: <%= fruit.weight %>gr
            </p>

            <p>
              Price: $<%= fruit.price %>
            </p>

            <p>
              Availability: <%= fruit.availability %>
            </p>
          </td>

          <td class="py-3 px-3">
            <ul>
              <li><%= link_to 'Show', fruit, class: 'hover:underline' %></li>
              <li><%= link_to 'Edit', edit_fruit_path(fruit), class: 'hover:underline' %></li>
              <li><%= link_to 'Destroy', fruit, class: 'hover:underline', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></li>
            </ul>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
